<%= form_for @idea do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control"%>
  </div>
  <%= f.submit "Upload Idea!", class: "btn btn-primary" %>
<% end %>

<% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
